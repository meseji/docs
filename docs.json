{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "Meseji Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": {
    "light": "/images/favicon icon.png",
    "dark": "/images/favicon icon.png"
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "icon": "book-open-cover",
          "href": "https://docs.meseji.app"
        },
        {
          "anchor": "Community",
          "icon": "slack",
          "href": "https://mintlify.com/community"
        },
        {
          "anchor": "Blog",
          "icon": "newspaper",
          "href": "https://meseji.app/blog"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "openapi": "https://api.meseji.app/api/docs/json",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Templates",
            "pages": [
              "api-reference/endpoint/get-templates",
              "api-reference/endpoint/get-template-variables"
            ]
          },
          {
            "group": "Messages",
            "pages": [
              "api-reference/endpoint/send-template",
              "api-reference/endpoint/send-text",
              "api-reference/endpoint/send-image"
            ]
          }
        ]
      },
      {
        "tab": "Changelog",
        "pages": [
          "changelog/page"
        ]
      }
    ]
  },
  "logo": {
    "light": "/images/Meseji Logo (1).png",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:contact@meseji.app"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mesejiOfficial",
      "linkedin": "https://www.linkedin.com/company/meseji",
      "instagram": "https://www.instagram.com/meseji.app"
    }
  },
  "api": {
    "playground": {
      "display": "interactive"
    }
  },
  "seo": {
    "indexing": "navigable"
  }
}
